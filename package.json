  "devDependencies": {
    "@types/jest": "25.2.1",
    "@types/marked": "0.7.3",
    "@types/node": "13.11.0",
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "husky": "4.2.3",
    "inversify-props": "2.0.1",
    "jest": "25.2.7",
    "lint-staged": "10.1.2",
    "prettier": "2.0.2",
    "prismjs": "1.20.0",
    "servor": "3.2.0",
    "snowpack": "1.6.0",
