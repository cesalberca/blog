{
  "name": "blog",
  "description": "CÃ©sar Alberca's blog",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "homepage": "https://www.cesalberca.com",
  "scripts": {
    "start": "snowpack dev",
    "build": "run-s -l build compile",
    "postbuild": "run-s optimize",
    "clean": "rimraf dist",
    "copy": "run-s copy:assets copy:dependencies",
    "copy:assets": "cpx \"src/**/*.{jpg,jpeg,svg,png,css,html,ico,md,xml,txt}\" dist/",
    "copy:dependencies": "cpx \"web_modules/**/*.js\" dist/web_modules",
    "copy:watch": "run-p copy:assets:watch copy:dependencies:watch",
    "copy:assets:watch": "cpx \"src/**/*.{jpg,jpeg,svg,png,css,html,ico,md,xml,txt}\" dist/ -w",
    "copy:dependencies:watch": "cpx \"web_modules/**/*.js\" dist/web_modules -w",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "optimize": "ts-node scripts/optimize.ts",
    "deploy": "scripts/deploy.sh deploy",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "jest"
  },
  "dependencies": {
    "front-matter": "4.0.1",
    "inversify-props": "2.0.1",
    "lit-element": "2.3.1",
    "lit-html": "1.2.1",
    "marked": "1.1.0",
    "prismjs": "1.21.0",
    "reflect-metadata": "0.1.13",
    "router-slot": "1.5.4",
    "rxjs": "6.5.5"
  },
  "devDependencies": {
    "@babel/core": "7.10.0",
    "@babel/plugin-proposal-class-properties": "7.10.1",
    "@babel/plugin-proposal-decorators": "7.10.0",
    "@babel/plugin-transform-typescript": "7.10.1",
    "@babel/preset-env": "7.10.0",
    "@babel/preset-typescript": "7.9.0",
    "@snowpack/app-scripts-lit-element": "1.0.0",
    "@types/jest": "25.2.3",
    "@types/marked": "0.7.4",
    "@types/node": "14.0.5",
    "@types/prismjs": "1.16.1",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "babel-jest": "26.0.1",
    "cpx": "1.5.0",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "globby": "11.0.0",
    "husky": "4.2.5",
    "imagemin": "7.0.1",
    "imagemin-dir": "1.0.0-alpha.1",
    "imagemin-gifsicle": "7.0.0",
    "imagemin-mozjpeg": "8.0.0",
    "imagemin-optipng": "8.0.0",
    "jest": "26.0.1",
    "jest-ts-webcompat-resolver": "1.0.0",
    "lint-staged": "10.2.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "snowpack": "2.0.0-rc.12",
    "ts-mockito": "2.5.0",
    "ts-node": "8.10.1",
    "typescript": "3.9.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "pre-push": "run-s lint test"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
